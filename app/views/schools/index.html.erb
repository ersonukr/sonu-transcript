
<div class="mini-title-head-bar logiq1">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <ol class="greybeadcrub">
          <ul class="greybeadcrub"><li><%= link_to 'Home',root_path %></li>
            <li class="active">School</li>
          </ul>                    
        </ol>
      </div>
