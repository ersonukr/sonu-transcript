
<div class="mini-title-head-bar logiq1">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <ol class="greybeadcrub">
          <ul class="greybeadcrub"><li><%= link_to 'Home',root_path %></li>
            <li class="active">School Details</li>
          </ul>                    
        </ol>
      </div>
    </div>
  </div>
</div>



<div class="container">
  <div class="row">
    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
    <% if alert %>
      <center><p class="alert alert-danger"><%= alert %></p></center>
    <% end %>
    <% if flash[:notice] %>
      <center><p class="alert alert-success"><%= flash[:notice] %></p></center>
    <% end %>
      <div class="panel panel-default">
        <div class="panel-heading"> <strong class="">School Details</strong>
        </div>
        <table class="table table-striped table-responsive table-bordered">
          <tbody>
            <tr>
              <th class="showdt1">School Name</th>
              <td><%=@school.school_name%></td>
             </tr>
            <tr>
              <th class="showdt1">Admin Name</th>
              <td><%=@school.admin_name%></td>
            </tr>
            <tr>
              <th class="showdt1">Address</th>
              <td><%=@school.address1%>, <%=@school.address2%> ,<%=@school.address3%></td>
            </tr>
            <tr>
              <th class="showdt1">Country</th>
              <td><%=@country = Carmen::Country.coded(@school.country)%></td>
            </tr>
            <tr>
              <% @subregions = @country.subregions %>
              <% @state = @subregions.coded(@school.state) %>
              <th class="showdt1">State</th>
                <td>
                  <%if @state.blank?%>
                    <%= @school.state%>        
                  <%else%>
                    <%=@state.name%>
                  <%end%>
                </td>
            </tr>
            <tr>
              <th class="showdt1">City</th>
              <td><%=@school.city%></td>
            </tr>
            <tr>
              <th class="showdt1">Zip</th>
              <td><%=@school.zip%></td>
            </tr>
            <tr>
              <th class="showdt1">Phone</th>
              <td><%=@school.phone%></td>
            </tr>
            <tr>
              <th class="showdt1">Email id</th>
              <td><%=@school.email%></td>
            </tr>
            <tr>
              <th class="showdt1">Academic Term</th>
              <td>s<%=@school.academic_term%></td>
            </tr>
            <tr>
              <th class="showdt1">Grading Scale</th>
              <td><%=@school.grading_scale%></td>
            </tr>
          </tbody>
        </table>
        <div class="panel-footer ">
          <%= link_to "Back", :back,:class=>'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
</div>
