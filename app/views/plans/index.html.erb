<div class="mini-title-head-bar">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<ol class="greybeadcrub">
					<ul class="greybeadcrub"><li><a href="index.html">Home</a></li>
						<li class="active">Plan</li>
					</ul> 
				</ol>
			</div>
		</div>
	</div>
</div>

<div class="container">
	<%if @plan.blank?%>
		<h1>There is no Plan has been created yet!!</h1>
	<%else%>
		<%if !current_user.subscription.blank?%>
			<div class="col-md-12">
				<div class="panel panel-default">
					<div class="panel-heading dashy1">current Plan</div>
					<div class="panel-body dashy2">
						<div class="dashy3">Registration Date: <span class="dashy4"><%= current_user.subscription.created_at.strftime("%m-%d-%Y") %></span></div> 
						<div class="dashy3">Plan End Date: <span class="dashy4"><%= current_user.subscription.plan_end_date.strftime("%m-%d-%Y")  %></span></div> 
						<div class="dashy3">Current Plan: <span class="dashy4">Trial</span></div>
					</div>
				</div>
			</div>

			<h1>You Can Upgrade Your Plan !!</h1> 
		<%end%>

		<% @plan.each do |plan| %>
			<%= form_for plan, url: transactions_path, method: :post do |f|%>
				<input type="hidden" name="amount" value="<%= plan.amount%>">
				<input type="hidden" name="subscription_period" value="<%= plan.subscription_period%>">
				<input type="hidden" name="plan_id" value="<%= plan.id%>">

				<div class="col-sm-3">
					<div class="panel panel-primary">
						<div class="panel-heading">
							<h3 class="txtalyn"><%=plan.name%></h3>
						</div>
						<div class="list-group">
							<div class="list-group-item txtalyn">Subscription Period :<%= plan.subscription_period%> </div>
							<div class="list-group-item txtalyn">Description :<%= plan.description%></div>
							<div class="list-group-item txtalyn">
								<span class="plan-duration prycpln2">Amount /  </span>
								<span class="prycpln">USD <%= plan.amount %></span>
							</div>
							<div class="panel-heading">
								<div class="btn btn-info btn-lg btn-block paid btn-max stripe-button">
									<script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
									data-key="pk_test_jMUKzHL4kwf1KFpFhTVA8QFu"
									data-description="<%= plan.name%>"
									data-amount="<%= plan.amount%>"></script>    
								</div>
							</div>
						</div>
					</div>
				</div>
			<%end%>
		<%end%>
	<%end%>
</div>





