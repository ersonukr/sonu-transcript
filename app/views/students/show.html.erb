
<div class="mini-title-head-bar logiq1">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<ol class="greybeadcrub">
					<ul class="greybeadcrub"><li><%= link_to 'Home',root_path %></li>
						<li class="active">Student Details</li>
					</ul>                   
				</ol>
			</div>
		</div>
	</div>
</div>



<div class="container">
	<div class="row">
		<div class="col-md-6 col-sm-6">
			<div class="panel panel-default">
				<div class="panel-heading"> <strong class=""> Student Details</strong>
				</div>
					<table class="table table-striped table-responsive table-bordered">
						<tbody><tr>
							<th class="showdt1">Name</th><td><%=@student.first_name%> <%=@student.middle_name%> <%=@student.last_name%></td>
						</tr>
						<tr>
							<th class="showdt1">Date of Birth</th><td><%=@student.dob%> </td>
						</tr>
						<tr>
							<th class="showdt1">Address</th><td><%=@student.address1%> , <%=@student.address2%> , <%=@student.address3%></td>
						</tr>
						<tr>
							<th class="showdt1">Country</th><td><%=@country = Carmen::Country.coded(@student.country)%></td>
						</tr>
						<tr>
							<th class="showdt1">State</th>
							<td>
								<%if @state.blank?%>
									<%= @student.state%>				
								<%else%>
									<%=@state.name%>
								<%end%>				
							</td>
						</tr>
						<tr>
							<th class="showdt1">City</th><td><%=@student.city%></td>
						</tr>
						<tr>
							<th class="showdt1">Zip</th><td><%=@student.zip%></td>
						</tr>
						<tr>
							<th class="showdt1">Phone</th><td><%=@student.phone%></td>
						</tr>
						<tr>
							<th class="showdt1">Email id</th><td><%=@student.email%></td>
						</tr>
						<tr>
							<th class="showdt1">Enrollment Date</th><td><%=@student.enroll_date%></td>
						</tr>
						<tr>
							<th class="showdt1">Graduation Date</th><td><%=@student.graduation_date%></td>
						</tr>
					</tbody></table>

				</div>
			</div>
			<div class="col-md-6 col-sm-6">
				<div class="panel panel-default">
					<div class="panel-heading"> <strong class=""> Academic Details</strong>

					</div>
					<%x=1%>
					<%@student.subject.length.times do|academic|%>
					<table class="table table-striped table-responsive table-bordered"><tbody>
						<tr>
              <th colspan="2" class="clasq1">Class : <%= x %></th>
            </tr>
					<tr>
						<th class="showdt1">Graduation Name</th><td><%=@student.course_name[academic]%></td>
					</tr>
					<tr>
						<th class="showdt1">Year</th><td><%=@student.completion_year[academic]%> </td>
					</tr>

					<tr>
						<th class="showdt1">Subject</th><td><%=@student.subject[academic]%></td>
					</tr>
					<tr>
						<th class="showdt1">Course Name</th><td><%=@student.course_name[academic]%></td>
					</tr>
					<tr>
						<th class="showdt1">Honors</th><td><%=@student.honors[academic]%></td>
					</tr>
					<tr>
						<th class="showdt1">Grade</th><td><%=@student.grade[academic]%></td>
					</tr>
					<tr>
						<th class="showdt1">Credits</th><td><%=@student.credits[academic]%></td>
					</tr>

				</tbody></table>
				<% x = x+1%>
			<%end%>
				<div class="panel-footer txtalyn3">
					<%= link_to "Back", :back, :class=>"btn btn-info" %>
				</div>
			</div>
		</div>

	</div>
</div>