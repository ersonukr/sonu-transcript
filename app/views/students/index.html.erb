	<div class ="row">
		<div class = "col-xs-2">&nbsp;</div>

		<div class = "col-xs-8">
			<table class="table table-striped table-responsive table-bordered">
				<tr>
					<th>Name</th><th>Date of Birth</th><th colspan ='3'><%= link_to 'Add New Student',new_school_student_path(@school.id), class: 'btn btn-primary btn-xs'%></th>
				</tr>
				<% @student.each do |student|%>
				<tr>
					<td><%= student.first_name %> <%= student.middle_name %> <%= student.last_name %></td>
					<td><%= student.dob%></td>
					<td>
						<%= link_to 'Show' , school_student_path(student.school,student.id), class: 'btn btn-primary btn-xs'%>
					</td>

					<td> 
						<%= link_to 'Edit' , edit_school_student_path(student.school,student.id) , class: 'btn btn-info btn-xs'%>
					</td>
					<td>
						<%= link_to 'Destroy' , school_student_path(student.school,student.id),method: :delete , data: {confirm: 'Are you sure'} , class: 'btn btn-danger btn-xs'%>
					</td>
					<td>
						<%= link_to 'View pdf',view_pdf_path(student)%>
					</td>
					
				</tr>
				<%end%>

			</table>
		</div>
		<div class = "col-xs-2">&nbsp;</div>
	</div>


