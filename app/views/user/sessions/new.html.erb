<div class="mini-title-head-bar logiq1">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <ol class="greybeadcrub">
                    <ul class="greybeadcrub">
                        <li><%= link_to 'Home',root_path %></li>
                        <li class="active">Login</li>
                    </ul>
                </ol>
            </div>
        </div>
    </div>
</div>



<div class="container">
    <div class="row">


        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
        <% if alert %>
            <center><p class="alert alert-danger"><%= alert %></p></center>
        <% end %>
            <div class="panel panel-default">
                <div class="panel-heading"> <strong class="">Login</strong>

                </div>
                <div class="panel-body">
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "form-horizontal",:id=> "user_login"}) do |f| %>
                        <div class="form-group required">
                            <label for="email" class="col-sm-3 control-label rigys1">Email</label>
                            <div class="col-sm-9">
                                <%= f.text_field :email,:class=>"form-control",:required => true,placeholder: "Email"  %>
                            </div>
                            <span class="inline-errors">
                              <%=@user.errors[:email].join(",") %> 
                            </span>
                        </div>
                        <div class="form-group required">
                            <label for="password" class="col-sm-3 control-label rigys1">Password</label>
                            <div class="col-sm-9">
                                <%= f.password_field :password, autocomplete: "off",:class=>"form-control",:required => true,placeholder: "Password"  %>
                            </div>
                            <span class="inline-errors">
                              <%=@user.errors[:password].join(",") %> 
                            </span>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-3 col-sm-9">
                                <div class="checkbox">
                                    <%= f.check_box :remember_me %>
                                    <%= f.label :remember_me %>
                                </div>
                            </div>
                        </div>
                        <div class="form-group last">
                            <div class="col-sm-offset-3 col-sm-9">
                                <%= f.submit "Sign in", :class=>"btn btn-success" %>
                            </div>
                            <div class="col-sm-offset-3 col-sm-9 logiq1">
                                <%= link_to 'Forgot your password?',new_user_password_path %>
                            </div>
                        </div>
                    <% end %>
                </div>
                <div class="panel-footer">Not Registered?
                    <%= link_to 'Sign Up here',new_user_registration_path %> 
                </div>
            </div>
        </div>

    </div>
</div>