          <ul class="greybeadcrub">
            <li><%= link_to 'Home',root_path %></li>
            <li class="active">Dashboard</li>
          </ul>                    
        </ol>
      </div>
    </div>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="col-md-3 col-sm-3">
     <div class="panel panel-default">
      <div class="panel-heading dashy1">User</div>
      <div class="panel-body dashy2">
       <img class="dashy6" src="/assets/userdash.png" alt="" /> </div>
     </div>
   </div>
   <%= link_to schools_path do %>
     <div class="col-md-3 col-sm-3">
