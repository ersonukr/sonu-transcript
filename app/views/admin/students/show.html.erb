
<div class="panel">
	<h3>Student Details:</h3>
	<div class="panel_contents">
		<div class="attributes_table ">
			<table class="table table-striped table-responsive table-bordered">
				<tr>
					<th>Name</th><td><%=@student.first_name%> <%=@student.middle_name%> <%=@student.last_name%></td>
				</tr>
				<tr>
					<th>DOB</th><td><%=@student.dob%> </td>
				</tr>
				<tr>
					<th>Address</th><td><%=@student.address1%> , <%=@student.address2%> , <%=@student.address3%></td>
				</tr>
				<tr>
					<th>Country</th><td><%=@country = Carmen::Country.coded(@student.country)%></td>
				</tr>
				<tr>
					<% @subregions = @country.subregions %>
					<% @state = @subregions.coded(@student.state) %>
					<th>State</th>
					<td>
						<%if @state.blank?%>
						<%= @student.state%>				
						<%else%>
						<%=@state.name%>
						<%end%>
					</td>
				</tr>
				<tr>
					<th>City</th><td><%=@student.city%></td>
				</tr>
				<tr>
					<th>Zip</th><td><%=@student.zip%></td>
				</tr>
				<tr>
					<th>Phone</th><td><%=@student.phone%></td>
				</tr>
				<tr>
					<th>Email id</th><td><%=@student.email%></td>
				</tr>
				<tr>
					<th>Enrollment Date</th><td><%=@student.enroll_date%></td>
				</tr>
				<tr>
					<th>Graduation Date</th><td><%=@student.graduation_date%></td>
				</tr>
			</table>
			<%x=1%>
			<%@student.subject.length.times do|academic|%>
			<table border="0" cellspacing="0" cellpadding="0">
				<tbody>
					<h3 class="studentH3">Course <%= x %></h3>
					<tr>
						<th>Graduation Name</th><td><%=@student.grad_name[academic]%></td>
					</tr>
					<tr>
						<th>Completion Year</th><td><%=@student.completion_year[academic]%> </td>
					</tr>
					<tr>
						<th>Description</th><td><%=@student.description[academic]%></td>
					</tr>
					<tr>
						<th>Subject</th><td><%=@student.subject[academic]%>	</td>
					</tr>
					<tr>
						<th>Course Name</th><td><%=@student.course_name[academic]%></td>
					</tr>
					<tr>
						<th>Honors</th><td><%=@student.honors[academic]%></td>
					</tr>
					<tr>
						<th>Grade</th><td><%=@student.grade[academic]%></td>
					</tr>
					<tr>
						<th>Credits</th><td><%=@student.credits[academic]%></td>
					</tr>
					<tr>
						<th>Total Credit</th><td><%=@student.total_credit[academic]%></td>
					</tr>
					<tr>
						<th>Gpa Credit</th><td><%=@student.gpa_credit[academic]%></td>
					</tr>
					<tr>
						<th>Gpa Points</th><td><%=@student.gpa_points[academic]%></td>
					</tr>
					<tr>
						<th>Cumulative Gpa</th><td><%=@student.cumulative_gpa[academic]%></td>
					</tr>
				</tbody>
			</table>
			<% x = x+1%>
			<%end%>
		</div>
	</div>
</div>


