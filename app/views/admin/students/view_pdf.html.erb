          <li id="schools"><a href="/admin/schools">Schools</a></li>
          <li id="students" class="current"><a href="/admin/students">Students</a></li>
          <li id="users"><a href="/admin/users">Users</a></li>
        </ul>
        <ul id="utility_nav" class="header-item tabs">
          <li id="current_user"><a href="/admin/admin_users/1">admin@example.com</a></li>
          <li id="logout"><a href="/admin/logout" data-method="get">Logout</a></li>
        </ul>
      </div>
      <div id="title_bar" class="title_bar">
        <div id="titlebar_left">
          
